<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/ctgry_logo_image_view"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_logo_toolbar"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/ctgry_text_name"
        style="@style/ProductNameTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:minLines="1"
        android:text="Data Cables"
        app:layout_constraintStart_toEndOf="@id/ctgry_logo_image_view"
        app:layout_constraintTop_toTopOf="@id/ctgry_logo_image_view"
        app:layout_constraintEnd_toStartOf="@id/arrow_imv"/>

    <TextView
        android:id="@+id/ctgry_text_products"
        style="@style/ProductNameTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/grey_approx"
        android:minLines="1"
        android:text=""
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/ctgry_text_name"
        app:layout_constraintStart_toStartOf="@id/ctgry_text_name"
        app:layout_constraintEnd_toStartOf="@id/arrow_imv"/>


    <ImageView
        android:id="@+id/arrow_imv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/arrow"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@id/ctgry_logo_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ctgry_logo_image_view"
        android:layout_margin="@dimen/_12sdp"/>

