<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/_2sdp"
        android:tint="@color/black"
        app:srcCompat="@drawable/white_arrow_left" />


    <TextView
        android:id="@+id/toolbar_title_text_view"
        style="@style/ToolbarTitleAppearance"
        android:textSize="@dimen/_14ssp"
        android:layout_width="0dp"
        android:gravity="start"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:text=""
        android:maxLength="50"
        android:layout_marginBottom="@dimen/_1sdp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/toolbar_ohnik_image_view"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="4dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_8sdp"
        app:srcCompat="@drawable/ic_search" />

    <FrameLayout
        android:layout_width="@dimen/_32sdp"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_12sdp">

        <ImageView
            android:id="@+id/toolbar_cart_icon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_2sdp"
            app:srcCompat="@drawable/ic_cart_bag" />

        <TextView
            android:id="@+id/toolbar_cart_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/shape_circle_red"
            android:gravity="center"
            android:textColor="@color/colorWhitePure"
            android:textSize="@dimen/_8ssp"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>
</layout>